<Window x:Class="DataBindingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1000">

    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="165"></RowDefinition>
            <RowDefinition Height="263.04"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        --><!--Регистрация пользователя--><!--
        <Border  Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1">
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" HorizontalAlignment="Center" Width="230">
                <Label Content="Фамилия"></Label>
                <TextBox Text="{Binding doctor.Name}"></TextBox>
                <Label Content="Имя"></Label>
                <TextBox Text="{Binding doctor.LastName}"></TextBox>
                <Label Content="Отчество"></Label>
                <TextBox Text="{Binding doctor.MiddleName}"></TextBox>
                <Label Content="Специальность"></Label>
                <TextBox Text="{Binding doctor.Specialisation}"></TextBox>
                <Label Content="Пароль"></Label>
                <TextBox x:Name="PasswordLine" Text="{Binding doctor.Password}"></TextBox>
                <Label Content="Подтвердите пароль"></Label>
                <TextBox x:Name="ConfirmPassword"/>
                <Button Margin="0,10,0,0" Click="Add_User">Зарегестрироваться</Button>
            </StackPanel>
        </Border>

        
        --><!--Поиск пациента по id--><!--
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
            <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Width="204">
                <Label Content="Введите индентификатор пациента"></Label>
                <StackPanel Orientation="Horizontal" Width="179">
                    <TextBox Width="100" x:Name="findId"></TextBox>
                    <Button Width="60" Margin="10,0,0,0" Click="Search_Patient">Поиск</Button>
                </StackPanel>
            </StackPanel>
        </Border>

        --><!--Вход пользователя--><!--
        <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,0" Grid.RowSpan="2" HorizontalAlignment="Center">
                <Label Content="Введите индентификатор пользователя"></Label>
                <TextBox x:Name="FindId"></TextBox>
                <Label Content="Введите пароль"></Label>
                <TextBox x:Name="FindPassword"/>
                <Button Margin="0,10,0,0" Click="Enter_User">Войти</Button>
            </StackPanel>
        </Border>

        --><!--Добавление пациента--><!--
        <Border  Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1">
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Center" Width="230">
                <Label Content="Фамилия"/>
                <TextBox Text="{Binding patient.Name}"></TextBox>
                <Label Content="Имя"></Label>
                <TextBox Text="{Binding patient.LastName}"></TextBox>
                <Label Content="Отчество"></Label>
                <TextBox Text="{Binding patient.MiddleName}"></TextBox>
                <Label Content="Дата рождения"></Label>
                <DatePicker SelectedDate="{Binding patient.Birthday}"></DatePicker>
                --><!--<Label Content="Крайний прием"></Label>
                <TextBox Width="230"></TextBox>
                <Label Content="Крайний доктор"></Label>
                <TextBox Width="230"></TextBox>
                <Label Content="Диагноз"></Label>
                <TextBox Width="230"></TextBox>
                <Label Content="Рекомендации"></Label>
                <TextBox Width="230"></TextBox>--><!--
                <Button Margin="0,10,0,0" Click="Add_Patient">Добавить</Button>
            </StackPanel>
        </Border>
    
        --><!--Отображение информации о пользователе--><!--
        <Border  Grid.Row="3" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Center" Width="230">
                <WrapPanel Orientation="Horizontal">
                <Label Content="ID:"></Label>
                <Label x:Name="CurrentId" Content=""></Label>
                </WrapPanel>
                <WrapPanel Orientation="Horizontal">
                    <Label Content="Фамилия:"></Label>
                    <Label x:Name="CurrentName"></Label>
                </WrapPanel>
                <WrapPanel Orientation="Horizontal">
                    <Label Content="Имя:"></Label>
                    <Label x:Name="CurrentLastName"></Label>
                </WrapPanel>
                <WrapPanel Orientation="Horizontal">
                    <Label Content="Отчество:"></Label>
                    <Label x:Name="CurrentMiddleName"></Label>
                </WrapPanel>
                <WrapPanel Orientation="Horizontal">
                    <Label Content="Специальность:"></Label>
                    <Label x:Name="CurrentSpecialisation"></Label>
                </WrapPanel>
                --><!--<WrapPanel Orientation="Horizontal">
                    <Label Content="Пароль:"></Label>
                    <Label></Label>
                </WrapPanel>--><!--

            </StackPanel>
        </Border>

        --><!--Прием пациента--><!--    
        <Border  Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Grid.RowSpan="3" >
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" HorizontalAlignment="Center" Width="230">
                <Label Content="Идентификатор пациента"></Label>
                <TextBox x:Name="_patientID"></TextBox>
                <Label Content="Индентификатор врача"></Label>
                <TextBox x:Name="_doctorID" Text="{Binding patient.LastDoctor}"></TextBox>
                <Label Content="Дата приема"></Label>
                <DatePicker SelectedDate="{Binding patient.LastAppointment}"></DatePicker>
                <Label Content="Диагноз"></Label>
                <TextBox x:Name="_diagnosis" Text="{Binding patient.Diagnosis}"></TextBox>
                <Label Content="Рекомендации"></Label>
                <TextBox x:Name="_recomendation" Text="{Binding patient.Recomendations}"></TextBox>
                <Button Margin="0,10,0,0" Click="Appointment">Записать</Button>
            </StackPanel>
        </Border>

        --><!--Изменение информации о пациенте--><!--
        <Border  Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2" >
            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Width="230">
                <Label Content="Фамилия"></Label>
                <TextBox Text="{Binding patient.Name}"></TextBox>
                    <Label Content="Имя"></Label>
                <TextBox Text="{Binding patient.LastName}"></TextBox>
                    <Label Content="Отчество"></Label>
                <TextBox Text="{Binding patient.MiddleName}"></TextBox>
                    <Label Content="Дата рождения"></Label>
                <DatePicker SelectedDate="{Binding patient.Birthday}"></DatePicker>
                <Button Margin="0,10,0,0" Click="Change_Patient">Изменить</Button>
                <Button Margin="0,10,0,0" Click="Return">Вернуть изменения</Button>
                </StackPanel>
        </Border>

        --><!--Состояние системы--><!--
        <Border  Grid.Row="4" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3" >
            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"  Orientation="Horizontal">
                <Label Content="Количество пользователей:"></Label>
                <Label x:Name="UsersCount"></Label>
                <Label Content="Количество пациентов:" Margin="10,0,0,0"></Label>
                <Label x:Name="PatientsCount"></Label>
            </StackPanel>
        </Border>-->
    </Grid>
</Window>
