<Page x:Class="DataBindingWPF.Pages.EnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBindingWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnterPage">

    <Grid>
        
        <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,0" Grid.RowSpan="2" HorizontalAlignment="Center">
                <Label Content="Введите индентификатор пользователя"></Label>
                <TextBox x:Name="FindId"></TextBox>
                <Label Content="Введите пароль"></Label>
                <TextBox x:Name="FindPassword"/>
                <Button Margin="0,10,0,0" Click="Enter_User">Войти</Button>
                <Label Margin="0,30,0,0" Content="Нет учетной записи?"></Label>
                <Button Click="toRegistration">Регистрация</Button>
            </StackPanel>
        </Border>

    </Grid>
</Page>
