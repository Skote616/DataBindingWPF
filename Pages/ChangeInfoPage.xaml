<Page x:Class="DataBindingWPF.Pages.ChangeInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBindingWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangeInfoPage">

    <Grid>
        <Border  Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2" >
            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Width="230">
                <Label Content="Фамилия"></Label>
                <TextBox Text="{Binding Name}"></TextBox>
                <Label Content="Имя"></Label>
                <TextBox Text="{Binding LastName}"></TextBox>
                <Label Content="Отчество"></Label>
                <TextBox Text="{Binding MiddleName}"></TextBox>
                <Label Content="Дата рождения"></Label>
                <DatePicker SelectedDate="{Binding Birthday}"></DatePicker>
                <Label Content="Номер телефона"></Label>
                <TextBox Text="{Binding Phone}"></TextBox>
                <Button Margin="0,10,0,0" Click="Change_Patient">Изменить</Button>
                <Button Margin="0,10,0,0" Click="Return">Вернуть изменения</Button>
                <Button Margin="0,10,0,0" Click="GoBack">Вернуться</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
