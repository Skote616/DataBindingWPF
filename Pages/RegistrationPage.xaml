<Page x:Class="DataBindingWPF.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBindingWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Border  Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1">
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" HorizontalAlignment="Center" Width="230">
                <Label Content="Фамилия"></Label>
                <TextBox Text="{Binding Name}"></TextBox>
                <Label Content="Имя"></Label>
                <TextBox Text="{Binding LastName}"></TextBox>
                <Label Content="Отчество"></Label>
                <TextBox Text="{Binding MiddleName}"></TextBox>
                <Label Content="Специальность"></Label>
                <TextBox Text="{Binding Specialisation}"></TextBox>
                <Label Content="Пароль"></Label>
                <TextBox x:Name="PasswordLine" Text="{Binding Password}"></TextBox>
                <Label Content="Подтвердите пароль"></Label>
                <TextBox x:Name="ConfirmPassword"/>
                <Button Margin="0,10,0,0" Click="Add_User">Зарегестрироваться</Button>
                <Button Margin="0,10,0,0" Click="Back">Назад</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
